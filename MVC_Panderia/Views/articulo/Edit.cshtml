@model MVC_Panderia.Models.articulo

@{
    ViewBag.Title = "Editar Linea";
}

@using (Html.BeginForm())
{
    <div class="row  pb-2">
        <div class="col-12"><h4>@ViewBag.Title </h4></div>
    </div>
    @Html.HiddenFor(model => model.Id)

    <div class="row">
        <div class="form-group col-6">
            <label>Nombre</label>
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-6">
            <label>Familia</label>
            @Html.DropDownListFor(model => model.familiaId, (SelectList)ViewBag.FamiliaLst, new { @class = "form-control", aria_describedby = "dropdownMenu1" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label>Medida</label>
            @Html.DropDownListFor(model => model.unidad_medidaId, (SelectList)ViewBag.MedidaLst, new { @class = "form-control", aria_describedby = "dropdownMenu2" })
        </div>
        <div class="form-group col-6">
            <label>Codigo Barra</label>
            @Html.EditorFor(model => model.codigo_barra, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label>marca</label>
            @Html.EditorFor(model => model.marca, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group col-6">
            <label>formato</label>
            @Html.EditorFor(model => model.formato, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>


    <button type="submit" value="Save" class="btn btn-success pl-2">Guardar</button>
    <button type="button" value="Cancel" class="btn btn-primary pl-2" onclick="javascript:document.location.href='@Url.Action("Index", "linea")'">Cancelar</button>
}