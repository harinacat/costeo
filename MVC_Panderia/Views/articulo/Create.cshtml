@model MVC_Panderia.Models.articulo

@{
    ViewBag.Title = "Nuevo Articulo";
}

@using (Html.BeginForm())
{
    <div class="row  pb-2">
        <div class="col-12"><h4>@ViewBag.Title </h4></div>
    </div>

    <div class="row">
        <div class="form-group col-6">
            <label>Nombre</label>
            <input class="form-control" id="nombre-articulo" name="nombre">
        </div>
        <div class="form-group col-6">
            <label>Familia</label>
            @Html.DropDownList("familiaId", null, htmlAttributes: new {id="familia-tipo", @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label>Medida</label>
            @Html.DropDownList("unidad_medidaId", null, htmlAttributes: new {id="unidad-medida", @class = "form-control" })
        </div>
        <div class="form-group col-6">
            <label>Codigo Barra</label>
            <input class="form-control" id="codigo_barra" name="codigo_barra">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label>marca</label>
            <input class="form-control" id="marca_articulo" name="marca">
        </div>
        <div class="form-group col-6">
            <label>formato</label>
            <input class="form-control" id="formato_articulo" name="formato">
        </div>
    </div>
    <button type="submit" id="guardar-articulo" class="btn btn-primary pl-2">Guardar</button>
    <button type="button" value="Cancel" class="btn btn-primary pl-2" onclick="javascript:document.location.href='@Url.Action("Index", "articulo")'">Cancelar</button>

}

