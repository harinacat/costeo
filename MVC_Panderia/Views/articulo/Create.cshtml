@model MVC_Panderia.Models.articulo

@{
    ViewBag.Title = "Nuevo Articulo";
}

<form method="post" action="@Url.Action("Create", "articulo")">
    <div class="row  pb-2">
        <div class="col-12"><h4>@ViewBag.Title </h4></div>
    </div>

    <div class="row">
        <div class="form-group col-6">
            <label>Nombre</label>
            <input class="form-control" name="nombre">
        </div>
        <div class="form-group col-6">
            <label>Familia</label>
            @Html.DropDownListFor(model => model.familiaId, (SelectList)ViewBag.FamiliaLst, new { @class = "form-control",aria_describedby="dropdownMenu1"})
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label>Medida</label>
            @Html.DropDownListFor(model => model.unidad_medidaId, (SelectList)ViewBag.MedidaLst, new { @class = "form-control", aria_describedby = "dropdownMenu2" })
        </div>
        <div class="form-group col-6">
            <label>Codigo Barra</label>
            <input class="form-control" name="codigo_barra">
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label>marca</label>
            <input class="form-control" name="marca">
        </div>
        <div class="form-group col-6">
            <label>formato</label>
            <input class="form-control" name="formato">
        </div>
    </div>
    <button type="submit" class="btn btn-primary pl-2">Guardar</button>
    <button type="button" value="Cancel" class="btn btn-primary pl-2" onclick="javascript:document.location.href='@Url.Action("Index", "articulo")'">Cancelar</button>


</form>

