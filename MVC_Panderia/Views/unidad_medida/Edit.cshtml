@model MVC_Panderia.Models.unidad_medida

@{
    ViewBag.Title = "Editar Unidad Medida";
}

@using (Html.BeginForm())
{
    <div class="row  pb-2">
        <div class="col-12"><h4>@ViewBag.Title </h4></div>
    </div>
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label>Nombre</label>
        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" id="botonGuardar" value="Save" class="btn btn-success pl-2">Guardar</button>
    <button type="button" id="botonCancelar" value="Cancel" class="btn btn-primary pl-2" onclick="javascript:document.location.href='@Url.Action("Index", "unidad_medida")'">Cancelar</button>
}