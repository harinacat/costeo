@{
    ViewBag.Title = "Nuevo Detalle Receta " + ViewBag.NombreReceta;
}

<form method="post" action="@Url.Action("CreateDetail", "cabecera_receta", new {  nombre=ViewBag.NombreReceta })">
    <div class="row  pb-2">
        <div class="col-12"><h4>@ViewBag.Title </h4></div>
    </div>

    <div class="form-group">
        <label>Cantidad</label>
        <input class="form-control" name="cantidad">
    </div>

    <div class="form-group">
        <label>Articulo</label>
        @Html.DropDownList("articuloId", null, htmlAttributes: new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    

</form>

