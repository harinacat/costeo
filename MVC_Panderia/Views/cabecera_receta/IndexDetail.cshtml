@model IEnumerable<MVC_Panderia.Models.detalle_receta>

@{
    ViewBag.Title = "Receta " + ViewBag.NombreReceta;
}
@using (Html.BeginForm())
{
    <div class="row  pb-2">
        <div class="col-6"><h4>@ViewBag.Title </h4></div>
        <div class="col-6">
            @Html.ActionLink("Nuevo Detalle Receta", "CreateDetail", "cabecera_receta", new { id = ViewBag.cabecera_recetaId, nombre = ViewBag.NombreReceta }, new { @class = "btn btn-primary float-right" })
        </div>
    </div>
    <div>
        <p>Receta equivalente a producir 1 kilo del producto @ViewBag.NombreReceta</p>
        
    </div>
    <div class="row">
        <div class="table-responsive col-12">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th>Id</th>
                        <th>Articulo</th>
                        <th>Cantidad</th>
                        <th>Medida</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@Html.DisplayFor(modelItem => item.articulo.nombre)</td>
                            <td>@item.cantidad</td>
                            <td>@Html.DisplayFor(modelItem => item.articulo.unidad_medida.nombre)</td>
                            <td>
                                @Html.ActionLink("Editar", "EditDetail", new { id = item.Id, id_cabecera = ViewBag.cabecera_recetaId, nombre = ViewBag.NombreReceta }, new { id="editar-costo", @class = "btn btn-primary pl-2" })
                                @Html.ActionLink("Eliminar", "DeleteDetail", new { id = item.Id, id_cabecera = ViewBag.cabecera_recetaId, nombre = ViewBag.NombreReceta }, new { @class = "btn btn-primary pl-2" })
                                
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}