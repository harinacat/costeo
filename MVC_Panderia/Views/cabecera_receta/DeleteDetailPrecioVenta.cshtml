|@model MVC_Panderia.Models.precio_venta

@{
    ViewBag.Title = "Esta seguro de eliminar el Precio de Venta?";
}

<form method="post" action="@Url.Action("DeleteDetailPrecioVenta", "cabecera_receta", new {id_cabecera=ViewBag.cabecera_recetaId,  nombre=ViewBag.NombreReceta })">

    <div class="row  pb-2">
        <div class="col-12"><h4>@ViewBag.Title </h4></div>
    </div>
    @Html.HiddenFor(m => m.fecha, new { @Value = Model.fecha.ToString("dd-MM-yyyy") })
    <div class="form-group">
        <div class="form-group">
            <label>Fecha</label>
            @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { Value = Model.fecha.ToString("dd-MM-yyyy"), @class = "form-control date-picker", disabled = "disabled" } })
        </div>

        <div class="form-group">
            <label>Valor</label>
            @Html.EditorFor(model => model.valor, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
        </div>
    </div>
    <button type="submit" value="Delete" class="btn btn-danger  pl-2">Eliminar</button>
    <button type="button" value="Cancel" class="btn btn-primary  pl-2" onclick="javascript:document.location.href='@Url.Action("Index", "Precio Venta")'">Cancelar</button>
</form>