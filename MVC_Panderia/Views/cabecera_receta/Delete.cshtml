@model MVC_Panderia.Models.cabecera_receta

@{
    ViewBag.Title = "Esta seguro de eliminar La Receta?";
}

@using (Html.BeginForm())
{
    <div class="row  pb-2">
        <div class="col-12"><h4>@ViewBag.Title </h4></div>
    </div>
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label>Id</label>
        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })

        <label>Articulo</label>
        @Html.DropDownList("articuloId", null, htmlAttributes: new { @class = "form-control" })
    </div>
    <button type="submit" id = "eliminar-receta" value="Delete" class="btn btn-danger  pl-2">Eliminar</button>
    <button type="button" value="Cancel" class="btn btn-primary  pl-2" onclick="javascript:document.location.href='@Url.Action("Index", "costo")'">Cancelar</button>
}