@model MVC_Panderia.Models.costo


@{
    ViewBag.Title = "Editar Costo Receta";
}

<form method="post" action="@Url.Action("EditDetailCosto", "cabecera_receta", new {id_cabecera=ViewBag.cabecera_recetaId,  nombre=ViewBag.NombreReceta })">

    <div class="row  pb-2">
        <div class="col-12"><h4>@ViewBag.fecha </h4></div>
    </div>
    @Html.HiddenFor(m => m.fecha, new { @Value = Model.fecha.ToString("dd-MM-yyyy") })
    <div class="form-group">
        <label>Fecha</label>
        @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { Value = Model.fecha.ToString("dd-MM-yyyy"), @class = "form-control date-picker", disabled = "disabled" } })
    </div>

    <div class="form-group">
        <label>Valor</label>
        @Html.EditorFor(model => model.valor, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <button type="submit" value="Save" class="btn btn-success pl-2">Guardar</button>
    <button type="button" value="Cancel" class="btn btn-primary pl-2" onclick="javascript:document.location.href='@Url.Action("Index", "costo")'">Cancelar</button>
</form>
