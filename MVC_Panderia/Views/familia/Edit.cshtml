@model MVC_Panderia.Models.familia

@{
    ViewBag.Title = "Editar Familia";
}

@using (Html.BeginForm())
{
    <div class="row  pb-2">
        <div class="col-12"><h4>@ViewBag.Title </h4></div>
    </div>
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label>Nombre</label>
        @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @id="txt_nombre_editar"} })
        <label>Linea</label>
        @Html.DropDownList("lineaId",null,  htmlAttributes: new { @class = "form-control",  @id = "ddl_linea_editar" } )

    </div>

    <button type="submit" id="btn_guardar_edicion" value="Save" class="btn btn-success pl-2">Guardar</button>
    <button type="button" value="Cancel" class="btn btn-primary pl-2" onclick="javascript:document.location.href='@Url.Action("Index", "familia")'">Cancelar</button>
}