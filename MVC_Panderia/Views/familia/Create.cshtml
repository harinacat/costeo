
@{
    ViewBag.Title = "Nueva Familia";
}

<form method="post" action="@Url.Action("Create", "familia")">
    <div class="row  pb-2">
        <div class="col-12"><h4>@ViewBag.Title </h4></div>
    </div>

    <div class="form-group">
        <label>Nombre familia</label>
        <input class="form-control" name="nombre">

        <label>Linea</label>

        @Html.DropDownList("lineaId", null, htmlAttributes: new { @class = "form-control"})
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <button type="button" value="Cancel" class="btn btn-primary pl-2" onclick="javascript:document.location.href='@Url.Action("Index", "familia")'">Cancelar</button>


</form>