@model MVC_Panderia.Models.detalle_produccion

@{
    ViewBag.Title = "Editar Detalle Produccion";
}

<form method="post" action="@Url.Action("EditDetail", "cabecera_produccion", new {id_cabecera=ViewBag.cabecera_produccionId})">
    
    <div class="row  pb-2">
        <div class="col-12"><h4>@ViewBag.Title </h4></div>
    </div>
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label>Kilos</label>
        @Html.EditorFor(model => model.kilos, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label>Receta</label>
        @Html.DropDownList("cabecera_recetaId", null, htmlAttributes: new { @class = "form-control" })
    </div>

    <button type="submit" value="Save" class="btn btn-success pl-2">Guardar</button>
    <button type="button" value="Cancel" class="btn btn-primary pl-2" onclick="javascript:document.location.href='@Url.Action("Index", "costo")'">Cancelar</button>
 </form>
