@model MVC_Panderia.Models.cabecera_produccion

@{
    ViewBag.Title = "Produccion";
}

@using (Html.BeginForm())
{
    <div class="row  pb-2">
        <div class="col-12"><h4>@ViewBag.Title </h4></div>
    </div>
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label>Id</label>
        @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
    </div>
    <div class="form-group">
        <label>Fecha</label>
        @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { Value = Model.fecha.ToString("dd-MM-yyyy"), @class = "form-control", id="editar-fecha" } })
    </div>

    <button type="submit" value="Save" class="btn btn-success pl-2" id="editar-fecha-guardar">Guardar</button>
    <button type="button" value="Cancel" class="btn btn-primary pl-2" onclick="javascript:document.location.href='@Url.Action("Index", "cabecera_produccion")'">Cancelar</button>
}

