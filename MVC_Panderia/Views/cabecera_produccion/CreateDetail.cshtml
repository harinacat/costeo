@{
    ViewBag.Title = "Detalle Produccion";
}

<form method="post" action="@Url.Action("CreateDetail", "cabecera_produccion")">
    <div class="row  pb-2">
        <div class="col-12"><h4>@ViewBag.Title </h4></div>
    </div>

    <div class="form-group">
        <label>Kilos</label>
        <input class="form-control" name="kilos">
    </div>
    <div class="form-group">
        <label>Receta</label>
        @Html.DropDownList("cabecera_recetaId", null, htmlAttributes: new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>


</form>