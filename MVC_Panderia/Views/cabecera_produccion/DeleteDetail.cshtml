@model MVC_Panderia.Models.detalle_produccion

@{
    ViewBag.Title = "Esta seguro de eliminar el detalle de produccion?";
}

<form method="post" action="@Url.Action("DeleteDetail", "cabecera_produccion", new {id_cabecera=ViewBag.cabecera_produccionId})">

    <div class="row  pb-2">
        <div class="col-12"><h4>@ViewBag.Title </h4></div>
    </div>
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label>Kilos</label>
        @Html.EditorFor(model => model.kilos, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label>Receta</label>
        @Html.DropDownList("cabecera_recetaId", null, htmlAttributes: new { @class = "form-control" })
    </div>
    <button type="submit" value="Delete" class="btn btn-danger  pl-2">Eliminar</button>
    <button type="button" value="Cancel" class="btn btn-primary  pl-2" onclick="javascript:document.location.href='@Url.Action("Index", "cabecera_produccion")'">Cancelar</button>
</form>