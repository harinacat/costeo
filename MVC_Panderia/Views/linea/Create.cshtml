@{
    ViewBag.Title = "Nueva Linea";
}

<form method="post" action="@Url.Action("Create", "linea")">
    <div class="row  pb-2">
        <div class="col-12"><h4>@ViewBag.Title </h4></div>
    </div>

    <div class="form-group">
        <label>Nombre</label>
        <input class="form-control" name="nombre">
    </div>


    <button type="submit" class="btn btn-success">Guardar</button>
    <button type="button" value="Cancel" class="btn btn-primary pl-2" onclick="javascript:document.location.href='@Url.Action("Index", "linea")'">Cancelar</button>

</form>

